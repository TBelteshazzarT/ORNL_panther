<?xml version="1.0"?>
<robot name="hk_1500" xmlns:xacro="http://ros.org/wiki/xacro">

	<!-- Link setup -->	
	<link name="fr_wheel_link"/>
	<link name="mr_wheel_link"/>
	<link name="rr_wheel_link"/>
	<link name="fl_wheel_link"/>
	<link name="ml_wheel_link"/>	
	<link name="rl_wheel_link"/>	
	<link name="base_link"/>
	
	
	<!-- Joint defines -->
	<joint name="fr_wheel_joint" type="fixed">
		<parent link="base_link"/>
		<child link="fr_wheel_link"/>
		<axis xyz="0 0 1"/>
		<origin xyz="0.356108 -0.269875 0.0" rpy="1.5708 0.0 0.0"/>
	</joint>
	
	<joint name="fl_wheel_joint" type="fixed">
		<parent link="base_link"/>
		<child link="fl_wheel_link"/>
		<axis xyz="0 0 1"/>
		<origin xyz="0.356108 0.269875 0.0" rpy="-1.5708 0.0 0.0"/>
	</joint>

	<joint name="mr_wheel_joint" type="continuous">
		<parent link="base_link"/>
		<child link="mr_wheel_link"/>
		<axis xyz="0 0 1"/>
		<origin xyz="0.0 -0.269875 0.0" rpy="1.5708 0.0 0.0"/>
	</joint>
	
	<joint name="ml_wheel_joint" type="continuous">
		<parent link="base_link"/>
		<child link="ml_wheel_link"/>
		<axis xyz="0 0 1"/>
		<origin xyz="0.0 0.269875 0.0" rpy="-1.5708 0.0 0.0"/>
	</joint>
	
	<joint name="rr_wheel_joint" type="fixed">
		<parent link="base_link"/>
		<child link="rr_wheel_link"/>
		<axis xyz="0 0 1"/>
		<origin xyz="-0.356108 -0.269875 0.0" rpy="1.5708 0.0 0.0"/>
	</joint>
	
	<joint name="rl_wheel_joint" type="fixed">
		<parent link="base_link"/>
		<child link="rl_wheel_link"/>
		<axis xyz="0 0 1"/>
		<origin xyz="-0.356108 0.269875 0.0" rpy="-1.5708 0.0 0.0"/>
	</joint>
	
	<!--xacro:include filename="/panther_ws/src/lidar/config/laser.urdf.xacro"/-->
	<link name="hokuyo_link"> 
    	<visual>
      		<origin xyz="0 0 0.003"/>
      		<geometry>
        		<box size="0.079 0.05 0.006"/>
      		</geometry>
      		<material name="support">
        		<color rgba="0.5 0.5 0.5 1.0"/>
      		</material>
    	</visual>
    	<visual>
      		<origin xyz="0 0 0.041"/>
      		<geometry>
        		<box size="0.05 0.05 0.07"/>
      		</geometry>
      		<material name="lidar">
        		<color rgba="1.0 0.0 0.0 0.7"/>
      		</material>
    	</visual>
    	<collision>
      		<origin xyz="0 0 0.003"/>
      		<geometry>
        		<box size="0.079 0.05 0.006"/>
      		</geometry>
    	</collision>
    	<collision>
      		<origin xyz="0 0 0.041"/>
      		<geometry>
        		<box size="0.05 0.05 0.07"/>
      		</geometry>
    	</collision>
  	</link>

  	<joint name="hokuyo_joint" type="fixed">
    		<origin xyz="0.0775 0 0"/>
    		<parent link="base_link"/>
    		<child link="hokuyo_link"/>
  	</joint>

  	<link name="laser_frame"/>

  	<joint name="laser_joint" type="fixed">
    		<origin xyz="0 0 0.064"/>
    		<parent link="hokuyo_link"/>
    		<child link="laser_frame"/>
  	</joint>

</robot>
