<?xml version="1.0"?>
<robot name="hk_1500" xmlns:xacro="http://ros.org/wiki/xacro">

	<!-- Link setup -->	
	<link name="fr_wheel_link"/>
	<link name="mr_wheel_link"/>
	<link name="rr_wheel_link"/>
	<link name="fl_wheel_link"/>
	<link name="ml_wheel_link"/>	
	<link name="rl_wheel_link"/>	
	<link name="base_link"/>
	
	<!-- Joint defines -->
	<joint name="fr_wheel_joint" type="fixed">
		<parent link="base_link"/>
		<child link="fr_wheel_link"/>
		<axis xyz="0 0 1"/>
		<origin xyz="0.356108 -0.269875 0.0" rpy="1.5708 0.0 0.0"/>
	</joint>
	
	<joint name="fl_wheel_joint" type="fixed">
		<parent link="base_link"/>
		<child link="fl_wheel_link"/>
		<axis xyz="0 0 1"/>
		<origin xyz="0.356108 0.269875 0.0" rpy="-1.5708 0.0 0.0"/>
	</joint>

	<joint name="mr_wheel_joint" type="continuous">
		<parent link="base_link"/>
		<child link="mr_wheel_link"/>
		<axis xyz="0 0 1"/>
		<origin xyz="0.0 -0.269875 0.0" rpy="1.5708 0.0 0.0"/>
	</joint>
	
	<joint name="ml_wheel_joint" type="continuous">
		<parent link="base_link"/>
		<child link="ml_wheel_link"/>
		<axis xyz="0 0 1"/>
		<origin xyz="0.0 0.269875 0.0" rpy="-1.5708 0.0 0.0"/>
	</joint>
	
	<joint name="rr_wheel_joint" type="fixed">
		<parent link="base_link"/>
		<child link="rr_wheel_link"/>
		<axis xyz="0 0 1"/>
		<origin xyz="-0.356108 -0.269875 0.0" rpy="1.5708 0.0 0.0"/>
	</joint>
	
	<joint name="rl_wheel_joint" type="fixed">
		<parent link="base_link"/>
		<child link="rl_wheel_link"/>
		<axis xyz="0 0 1"/>
		<origin xyz="-0.356108 0.269875 0.0" rpy="-1.5708 0.0 0.0"/>
	</joint>

</robot>
